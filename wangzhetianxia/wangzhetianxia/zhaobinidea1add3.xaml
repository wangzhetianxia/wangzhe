            <Button Content="9、每天都整理工作任务清单               " HorizontalAlignment="Left" Height="77" Margin="11,440,0,0" VerticalAlignment="Top" Width="424" Click="Button_Click_9"/>
            <Button Content="10、敢于放慢速度                                " HorizontalAlignment="Left" Height="77" Margin="11,495,0,0" VerticalAlignment="Top" Width="424" Click="Button_Click_10"/>

        </Grid>
    </Grid>

</phone:PhoneApplicationPage>